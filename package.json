{
  "name": "web-ext-deploy",
  "version": "0.1.0",
  "description": "A tool for deploying WebExtensions to multiple stores.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "bin": "dist/cjs/index.js",
  "types": "dist",
  "scripts": {
    "start": "nodemon --config nodemon.json .",
    "tsc": "pnpm tsc-cjs && pnpm tsc-esm",
    "tsc-cjs": "tsc -p tsconfig-cjs.json",
    "tsc-esm": "tsc -p tsconfig-esm.json",
    "prepublish": "pnpm tsc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/avi12/web-ext-deploy"
  },
  "keywords": [
    "web-ext",
    "web-ext-deploy",
    "web-ext-publish",
    "chrome-deploy",
    "chrome-publish",
    "firefox-deploy",
    "firefox-publish",
    "opera-deploy",
    "opera-publish",
    "edge-deploy",
    "edge-publish"
  ],
  "files": [
    "dist/**/*"
  ],
  "author": {
    "name": "avi12",
    "email": "avi6106@gmail.com",
    "url": "https://avi12.com"
  },
  "bugs": {
    "email": "avi6106@gmail.com",
    "url": "https://github.com/avi12/web-ext-deploy/issues"
  },
  "homepage": "https://github.com/avi12/web-ext-deploy#readme",
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended",
      "eslint:recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "semi": "warn",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "prettier/prettier": "warn"
    },
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "trailingComma": "none"
  },
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "camel-case": "^4.1.2",
    "dotenv": "^8.2.0",
    "prompt-promise": "^1.0.3",
    "puppeteer": "^7.1.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/puppeteer": "^5.4.3",
    "@types/yargs": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
